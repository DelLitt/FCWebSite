@using FCCore.Model
<!DOCTYPE html>
<html ng-app="fc">
    <head>
        <base href="/">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title translate="OFFICIAL_SITE">Официальный сайт</title>

        <environment names="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            @*<link rel="stylesheet" href="~/css/bootstrap.css" />*@
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
                  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>
    </head>
<body ng-controller="rootCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <div>
                        <a href="/">
                            <img src="/images/skin/logo_002d72_white_boarder_45x45.png" />
                        </a>
                    </div>
                    <div class="navbar-brand-label">
                        <span>СФК «СЛУЦК»</span><br />
                        <span>ОФИЦИАЛЬНЫЙ САЙТ</span>
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-th-large"></span> <span translate="CLUB">Клуб</span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/club/mainteam" translate="MAIN_STAFF">Основной состав</a></li>
                            <li><a href="#">Дублирующий состав</a></li>
                            <li><a href="#">Молодежный сектор</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Руководящий состав</a></li>
                            <li><a href="#">Тренерский состав</a></li>
                            <li><a href="#">Медицинский состав</a></li>
                            <li><a href="#">Специалисты</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-eye-open"></span> <span translate="RESULTS">Результаты</span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Основной состав</a></li>
                            <li><a href="#">Дублирующий состав</a></li>
                            <li><a href="#">Молодежный сектор</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-info-sign"></span> <span translate="INFORMATION">Информация</span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Покупка билетов и абонементов</a></li>
                            <li><a href="#">Правила поведения на стадионе</a></li>
                            <li><a href="#">Закон О ФК и С-2014</a></li>
                            <li><a href="#">СФК "Слуцк" против расизма</a></li>
                            <li><a href="#">Контакты</a></li>
                        </ul>
                    </li>
                    <li><a asp-controller="Home" asp-action="Contact"><span translate="ATTRIBUTES">Атрибутика</span></a></li>
                    <li><a asp-controller="Home" asp-action="Contact"><span translate="HISTORY">История</span></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="javascript:void(0);" ng-click="changeLanguage('ru')" translate="SHORT_LANG_RU">рус</a></li>
                    <li><a href="javascript:void(0);" ng-click="changeLanguage('en')" translate="SHORT_LANG_EN">en</a></li>
                </ul>
                @*@await Html.PartialAsync("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="main-brand row fc-container">
            <div class="main-brand-left-block hidden-sm hidden-xs col-md-5">
                <h3>
                    <strong translate="OFFICIAL_NAME">Спортивный футбольный клуб «Слуцк»</strong><br />
                    <small><em translate="OFFICIAL_SLOGAN">Футбол - этот не всё, но все без футбола - ничто!</em></small>
                </h3>
                <span class="text-uppercase" translate="OFFICIAL_SITE">ОФИЦИАЛЬНЫЙ САЙТ</span>
            </div>
            <div class="main-brand-logo col-md-2 col-sm-2 hidden-xs">
                <a href="/">
                    <img src="~/images/skin/logo_002d72_800x800.png" />
                </a>
            </div>
            <div class="main-brand-right-block col-md-5 col-sm-10 col-xs-12">
                <div class="visible-sm">
                    <h5>
                        <strong translate="OFFICIAL_NAME">Спортивный футбольный клуб «Слуцк»</strong>
                    </h5>
                </div>
                <table class="table table-borderless table-striped">
                    <tr>
                        <td class="text-right"><h5>18:00. 17 апреля.<br /><small>11 тур. Высшая лига</small></h5></td>
                        <td class="text-left"><h5>Слуцк - Динамо-Минск. 4:2<br /><small class="text-center">Стадион: Городской (Слуцк)</small></h5></td>
                    </tr>
                    <tr>
                        <td class="text-right"><h5>22 апреля.<br /><small>1/8 финала. Кубок Беларуси</small></h5></td>
                        <td class="text-left"><h5>Торпедо-БелАЗ - Слуцк<br /><small class="text-center">Стадион: Торпедо (Жодино)</small></h5></td>
                    </tr>
                </table>
            </div>
        </div>
        @RenderBody()
        <footer class="row fc-container fc-pad">
            <div class="row">
                <div class="col-sm-3">
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                        <li><a asp-controller="Home" asp-action="Contact"><span translate="INFORMATION">Информация</span></a></li>
                        <li><a asp-controller="Home" asp-action="Contact"><span translate="ATTRIBUTES">Атрибутика</span></a></li>
                        <li><a asp-controller="Home" asp-action="Contact"><span translate="HISTORY">История</span></a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5 class="text-primary" translate="CLUB">Клуб</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" translate="MAIN_STAFF">Основной состав</a></li>
                        <li><a href="#">Дублирующий состав</a></li>
                        <li><a href="#">Молодежный сектор</a></li>
                        <li><a href="#">Руководящий состав</a></li>
                        <li><a href="#">Тренерский состав</a></li>
                        <li><a href="#">Медицинский состав</a></li>
                        <li><a href="#">Специалисты</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5 class="text-primary" translate="RESULTS">Результаты</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Основной состав</a></li>
                        <li><a href="#">Дублирующий состав</a></li>
                        <li><a href="#">Молодежный сектор</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5 class="text-primary" translate="INFORMATION">Информация</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Покупка билетов и абонементов</a></li>
                        <li><a href="#">Правила поведения на стадионе</a></li>
                        <li><a href="#">Закон О ФК и С-2014</a></li>
                        <li><a href="#">СФК "Слуцк" против расизма</a></li>
                        <li><a href="#">Контакты</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h6>© 2016 - <span translate="OFFICIAL_NAME">Спортивный футбольный клуб «Слуцк»</span></h6>
                </div>
            </div>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular-route/angular-route.js"></script>
        <script src="~/lib/angular-translate/angular-translate.js"></script>
        <script src="~/lib/angular-translate-storage-local/angular-translate-storage-local.js"></script>
        <script src="~/lib/angular-translate-loader-static-files/angular-translate-loader-static-files.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.js"></script>
        @*<script src="~/lib/angular-translate-storage-cookie/angular-translate-storage-cookie.js"></script>*@
        <script src="~/lib/fc/modules/fc.core.js"></script>
        <script src="~/lib/fc/modules/core/helper.js"></script>
        <script src="~/lib/fc/modules/core/notificationmanager.js"></script>
        <script src="~/lib/fc/modules/core/apisrv.js"></script>
        <script src="~/lib/fc/modules/core/publicationsSrv.js"></script>
        <script src="~/lib/fc/modules/core/configsrv.js"></script>
        <script src="~/lib/fc/modules/core/rankingsSrv.js"></script>
        <script src="~/lib/fc/modules/core/gamessrv.js"></script>
        <script src="~/lib/fc/modules/core/videossrv.js"></script>
        <script src="~/lib/fc/modules/core/personssrv.js"></script>
        <script src="~/lib/fc/modules/core/tourneyssrv.js"></script>
        <script src="~/lib/fc/modules/core/statssrv.js"></script>
        <script src="~/lib/fc/modules/fc.ui.js"></script>
        <script src="~/lib/fc/layout/publicationItem.directive.js"></script>
        <script src="~/lib/fc/layout/maintable.directive.js"></script>
        <script src="~/lib/fc/layout/roundresults.directive.js"></script>
        <script src="~/lib/fc/layout/persons/personcarditem.directive.js"></script>
        <script src="~/lib/fc/layout/persons/persontableitem.directive.js"></script>
        <script src="~/lib/fc/app.js"></script>
        <script src="~/lib/fc/home/rootctrl.js"></script>
        <script src="~/lib/fc/home/indexctrl.js"></script>
        <script src="~/lib/fc/publication/publicationctrl.js"></script>
        <script src="~/lib/fc/club/mainteamctrl.js"></script>
        <script src="~/lib/fc/person/personctrl.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)

</body>
</html>
