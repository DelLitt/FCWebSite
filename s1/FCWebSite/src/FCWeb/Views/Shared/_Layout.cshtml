        <script src="~/lib/fc/layout/protocol/textgoalprotocol.directive.js"></script>
        <script src="~/lib/fc/layout/image/imagegallery.directive.js"></script>
        <script src="~/lib/fc/app.js"></script>
        <script src="~/lib/fc/home/rootctrl.js"></script>
